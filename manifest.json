{
  "manifest_version": 3,
  "name": "Clipboard History",
  "description": "A clipboard history extension that captures and stores text and images.",
  "version": "1.0",
  "permissions": [
    "clipboardRead",
    "clipboardWrite",
    "storage",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "content_security_policy": {
    "extension_pages": {
      "script-src": "'self';",
      "object-src": "'self'"
    }
  },
  "commands": {
    "clear_clipboard_history": {
      "suggested_key": {
        "default": "Ctrl+Shift+C"
      },
      "description": "Clear clipboard history"
    }
  }
}
